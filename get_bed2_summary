#!/bin/bash

if [ $# -lt 5 ];then
	echo0 1 $0" in.bed2 in.feature.sizes out.prefix factor CPU picluster|transposon|gene"
	exit 1
fi
CPU=$5
FACTOR=$4
FACTOR_PP=`awk -v factor=$FACTOR 'BEGIN{print factor*factor}'`

PATH_BED2=${3}_temp_bed2 && mkdir -p ${PATH_BED2}
PATH_LENDIS=${3}_temp_lendis && mkdir -p ${PATH_LENDIS}
PATH_PP=${3}_temp_pp && mkdir -p ${PATH_PP}
PATH_SIGNAL=${3}_temp_signal && mkdir -p ${PATH_SIGNAL}
PARA_FILE1=${3}_temp_para1
PARA_FILE2=${3}_temp_para2
PARA_FILE3=${3}_temp_para3
PARA_FILE4=${3}_temp_para4
seperate_bed2.py $1 $2 ${PATH_BED2}
for i in ${PATH_BED2}/*
do
	bn=`basename $i`
	n=${bn%.bed2}
	echo -e "bed2_lendis $i ${FACTOR} > ${PATH_LENDIS}/${n}.lendis" >> ${PARA_FILE1}
	echo -e "bed2_pingpong -a $i -b $i | awk -v factor=${FACTOR_PP} 'BEGIN{FS=OFS=\"\\\t\"} {print \$1,\$2/factor}' > ${PATH_PP}/${n}.pp" >> ${PARA_FILE2}
	echo -e "awk -v factor=$FACTOR 'BEGIN{FS=OFS=\"\\\t\"} {if(\$6==\"+\" && \$5==1){sum1+=\$4/\$5}else if(\$6==\"-\" && \$5==1){sum2+=\$4/\$5};if(\$6==\"+\"){sum3+=\$4/\$5}else{sum4+=\$4/\$5}} END{print sum1/factor,sum2/factor,sum3/factor,sum4/factor}' $i > ${PATH_SIGNAL}/${n}.rpm" >> ${PARA_FILE3}
	echo -e "awk 'BEGIN{FS=OFS=\"\\\t\"} {if(\$6==\"+\" && \$5==1){sum1++}else if(\$6==\"-\" && \$5==1){sum2++};if(\$6==\"+\"){sum3++}else{sum4++}} END{print sum1/1,sum2/1,sum3/1,sum4/1}' $i > ${PATH_SIGNAL}/${n}.species" >> ${PARA_FILE4}
done
ParaFly -c ${PARA_FILE1} -CPU ${CPU} && rm ${PARA_FILE1}
ParaFly -c ${PARA_FILE2} -CPU ${CPU} && rm ${PARA_FILE2}
ParaFly -c ${PARA_FILE3} -CPU ${CPU} && rm ${PARA_FILE3}
ParaFly -c ${PARA_FILE4} -CPU ${CPU} && rm ${PARA_FILE4}
for i in ${PATH_BED2}/*
do
	bn=`basename $i`
	n=${bn%.bed2}
	echo -en "\t${n}" >> ${3}_header1
	cut -f 2 ${PATH_LENDIS}/${n}.lendis | awk 'NR!=1' > ${PATH_LENDIS}/${n}.uniq.reads.sense 
	cut -f 3 ${PATH_LENDIS}/${n}.lendis | awk 'NR!=1' > ${PATH_LENDIS}/${n}.uniq.reads.anti 
	cut -f 4 ${PATH_LENDIS}/${n}.lendis | awk 'NR!=1' > ${PATH_LENDIS}/${n}.uniq.species.sense 
	cut -f 5 ${PATH_LENDIS}/${n}.lendis | awk 'NR!=1' > ${PATH_LENDIS}/${n}.uniq.species.anti 
	cut -f 6 ${PATH_LENDIS}/${n}.lendis | awk 'NR!=1' > ${PATH_LENDIS}/${n}.all.reads.sense 
	cut -f 7 ${PATH_LENDIS}/${n}.lendis | awk 'NR!=1' > ${PATH_LENDIS}/${n}.all.reads.anti 
	cut -f 8 ${PATH_LENDIS}/${n}.lendis | awk 'NR!=1' > ${PATH_LENDIS}/${n}.all.species.sense 
	cut -f 9 ${PATH_LENDIS}/${n}.lendis | awk 'NR!=1' > ${PATH_LENDIS}/${n}.all.species.anti 
	cut -f 2 ${PATH_PP}/${n}.pp > ${PATH_PP}/${n}.ppc 
	rd=`cat ${PATH_SIGNAL}/${n}.rpm`
	sp=`cat ${PATH_SIGNAL}/${n}.species`
	echo -e "${n}\t${rd}\t${sp}" >> ${3}_body4
done
echo -e "\tuniq_sense_reads\tuniq_antisense_reads\tall_sense_reads\tall_antisense_reads\tuniq_sense_species\tuniq_antisense_species\tall_sense_species\tall_antisense_species" > ${3}_header2
echo -e "" >> ${3}_header1
touch ${3}_body1
for i in ${PATH_LENDIS}/*uniq.reads.sense 
do
	paste ${3}_body1 $i > ${3}_t && mv ${3}_t ${3}_body1
done
cut -f 2- ${3}_body1 > ${3}_t && mv ${3}_t ${3}_body1
touch ${3}_body2
for i in ${PATH_LENDIS}/*uniq.reads.anti 
do
	paste ${3}_body2 $i > ${3}_t && mv ${3}_t ${3}_body2
done
cut -f 2- ${3}_body2 > ${3}_t && mv ${3}_t ${3}_body2
touch ${3}_body3
for i in ${PATH_PP}/*.ppc 
do
	paste ${3}_body3 $i > ${3}_t && mv ${3}_t ${3}_body3
done

touch ${3}_body5
for i in ${PATH_LENDIS}/*uniq.species.sense 
do
	paste ${3}_body5 $i > ${3}_t && mv ${3}_t ${3}_body5
done
cut -f 2- ${3}_body5 > ${3}_t && mv ${3}_t ${3}_body5
touch ${3}_body6
for i in ${PATH_LENDIS}/*uniq.species.anti 
do
	paste ${3}_body6 $i > ${3}_t && mv ${3}_t ${3}_body6
done
cut -f 2- ${3}_body6 > ${3}_t && mv ${3}_t ${3}_body6
touch ${3}_body7
for i in ${PATH_LENDIS}/*all.reads.sense
do
	paste ${3}_body7 $i > ${3}_t && mv ${3}_t ${3}_body7
done
cut -f 2- ${3}_body7 > ${3}_t && mv ${3}_t ${3}_body7
touch ${3}_body8
for i in ${PATH_LENDIS}/*all.reads.anti
do
	paste ${3}_body8 $i > ${3}_t && mv ${3}_t ${3}_body8
done
cut -f 2- ${3}_body8 > ${3}_t && mv ${3}_t ${3}_body8
touch ${3}_body9
for i in ${PATH_LENDIS}/*all.species.sense
do
	paste ${3}_body9 $i > ${3}_t && mv ${3}_t ${3}_body9
done
cut -f 2- ${3}_body9 > ${3}_t && mv ${3}_t ${3}_body9
touch ${3}_body10
for i in ${PATH_LENDIS}/*all.species.anti 
do
	paste ${3}_body10 $i > ${3}_t && mv ${3}_t ${3}_body10
done
cut -f 2- ${3}_body10 > ${3}_t && mv ${3}_t ${3}_body10


cut -f 2- ${3}_body3 > ${3}_t && mv ${3}_t ${3}_body3
cat ${3}_header1 ${3}_body1 > ${3}.$6.uniq.reads.sense.lendis
cat ${3}_header1 ${3}_body2 > ${3}.$6.uniq.reads.antisense.lendis
cat ${3}_header1 ${3}_body3 > ${3}.$6.pp
cat ${3}_header2 ${3}_body4 > ${3}.$6.summary
cat ${3}_header1 ${3}_body5 > ${3}.$6.uniq.species.sense.lendis
cat ${3}_header1 ${3}_body6 > ${3}.$6.uniq.species.antisense.lendis
cat ${3}_header1 ${3}_body7 > ${3}.$6.all.reads.sense.lendis
cat ${3}_header1 ${3}_body8 > ${3}.$6.all.reads.antisense.lendis
cat ${3}_header1 ${3}_body9 > ${3}.$6.all.species.sense.lendis
cat ${3}_header1 ${3}_body10 > ${3}.$6.all.species.antisense.lendis
rm ${3}_header* ${3}_body*
rm -rf ${3}_temp*


